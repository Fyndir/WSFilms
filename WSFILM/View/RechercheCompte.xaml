<Page
    x:Class="WSFILM.View.RechercheCompte"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WSFILM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding RechercheCompte, Source={StaticResource Locator}}">

    <RelativePanel>
        <TextBlock Text="Recherche Compte"  Name="TxtB1" FontSize="24" FontWeight="Bold" Margin="50" ></TextBlock>
        <TextBlock Text="Mail" RelativePanel.Below="TxtB1" RelativePanel.AlignHorizontalCenterWithPanel="True" Name="TxtB2" Margin="10"></TextBlock>

        <TextBox Text="{Binding Mail, Mode=TwoWay}" x:Name="TbMail" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TxtB2" Width="240"/>
        <Button Command="{Binding BtnSearchCompteByMail}" x:Name="BtSearch" Content="Rechercher" RelativePanel.Below="TbMail" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="10" Width="240" ></Button>


    </RelativePanel>
</Page>
